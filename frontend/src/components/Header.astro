<style>
    .header {
        box-sizing: border-box;
        width: 100%;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
    }
    .title {
        font-size: 20px;
        font-weight: bold;
        white-space: nowrap;
    }
    .nav {
        display: flex;
        gap: 20px;
    }
    .nav a {
        text-decoration: none;
        color: #333;
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 5px;
        transition: 0.2s;
    }
    .nav a:hover {
        background: #eee;
    }

    /* „Éè„É≥„Éê„Éº„Ç¨„Éº„É°„Éã„É•„Éº„ÅÆ„Çπ„Çø„Ç§„É´ */
    .menu-icon {
        display: none;
        cursor: pointer;
        font-size: 24px;
        padding: 10px;
    }

    /* „É¢„Éê„Ç§„É´ÂØæÂøú */
    @media (max-width: 768px) {
        .dropdown-container {
            display: none;
        }
        .mypage-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: white;
        border-bottom: 1px solid #ddd;
        }

        .dropdown-container {
        display: block;
        position: relative;
        }

        .dropdown-btn {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        }

        /* „Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„É°„Éã„É•„Éº„ÅÆ„Éá„Ç∂„Ç§„É≥ */
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            overflow: hidden;
            min-width: 150px;
        }

        .dropdown-menu a, .dropdown-menu button {
            display: block;
            padding: 10px;
            text-align: left;
            width: 100%;
            border: none;
            background: none;
            cursor: pointer;
            color: inherit;
            text-decoration: none;
            font-size: 14px;
            transition: 0.2s ease-in-out, color 0.2s ease-in-out;
        }

        .dropdown-menu a:hover, 
        .dropdown-menu button:hover {
        background-color: #f0f0f0;
        color: #333; 
        }

        /* üìå „É°„Éã„É•„ÉºË°®Á§∫ÊôÇ */
        .dropdown-container.open .dropdown-menu {
        display: block;
        }
        .nav {
            display: none;
            flex-direction: column;
            background: white;
            position: absolute;
            top: 60px;
            right: 20px;
            width: 150px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
        }
        .nav a {
            display: block;
            padding: 10px;
            text-align: center;
        }
        .menu-icon {
            display: block;
        }
        .nav.open {
            display: flex;
        }
    }
</style>

<header class="header">
    <div class="title">My Book Diary</div>

    <nav class="nav">
        <a href="#">Home</a>
        <a href="#">Library</a>
        <a href="#">Settings</a>
    </nav>

    <div class="menu-icon">
        <button class="dropdown-btn">‚ò∞</button>
        <div class="dropdown-menu">
          <a href="#">Home</a>
          <a href="#">Library</a>
          <a href="#">Settings</a>
        </div>
      </div>
</header>

<script>
    const btn = document.querySelector(".menu-icon") as HTMLElement

	btn?.addEventListener('click', async () => {
        btn.classList.toggle("open");
	})
</script>