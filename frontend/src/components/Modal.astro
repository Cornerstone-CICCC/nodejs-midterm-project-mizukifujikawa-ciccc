---
export let show = true;
export let onClose = () => {};
export let onSubmit = () => {};
let title = "";
let author = "";
let evaluation = 1;
---

{show && (
  <div class="modal-overlay">
    <div class="modal">
      <h2>Add New Item</h2>
      <form>
        <label>Title:</label>
        <input type="text" value={title} required />

        <label>Author:</label>
        <input type="text" value={author} required />

        <label>Evaluation:</label>
        <input type="number" min="1" max="5" value={evaluation} required />

        <div class="modal-buttons">
          <button type="button">Cancel</button>
          <button type="submit">Add</button>
        </div>
      </form>
    </div>
  </div>
)}

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal {
    background: white;
    padding: 20px;
    border-radius: 8px;
    min-width: 300px;
  }

  .modal-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
  }

  .modal-buttons button {
    padding: 8px 12px;
    border: none;
    cursor: pointer;
  }

  .modal-buttons button:first-child {
    background: #ccc;
  }

  .modal-buttons button:last-child {
    background: #007bff;
    color: white;
  }
</style>
