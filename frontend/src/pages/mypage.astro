---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import BookList from "../components/BookList.astro";

const response = await fetch("http://localhost:3000/users/check-auth", {
  method: "GET",
  headers: {
    Cookie: Astro.request.headers.get("cookie") || "",
  },
  credentials: "include",
});

if (!response.ok) {
  return new Response(null, {
    status: 302,
    headers: { Location: "/" },
  });
}

const { user } = await response.json();
---

<Layout title="My Book List">
  <div class="mypage-top">
    <h1>Hello! {user.firstname} {user.lastname}.</h1>
    <div class="mypage-dropdown-container" id="menu">
      <button class="mypage-dropdown-btn">‚ò∞</button>
      <div class="mypage-dropdown-menu">
        <a href="#">Recently</a>
        <a href="#">Famous</a>
        <a href="#">My List</a>
        <button class="btn btn-logout">Log out</button>
      </div>
    </div>
  </div>
  <div class="content">
    <Sidebar />
    <BookList />
  </div>
</Layout>

<style>
  .content {
    display: flex;
  }
  .mypage-dropdown-container {
    display: none;
  }
  .mypage-top h1 {
    font-size: 18px;
  }
  @media (max-width: 768px) {
    .content {
      display: block;
      width: 100%;
    }
    .mypage-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      background: white;
      border-bottom: 1px solid #ddd;
    }

    .mypage-dropdown-container {
      display: block;
      position: relative;
    }

    .mypage-dropdown-btn {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
    }

    /* „Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„É°„Éã„É•„Éº„ÅÆ„Éá„Ç∂„Ç§„É≥ */
    .mypage-dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      background: white;
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
      border-radius: 5px;
      overflow: hidden;
      min-width: 150px;
    }

    .mypage-dropdown-menu a, 
    .mypage-dropdown-menu button {
      display: block;
      padding: 10px;
      text-align: left;
      width: 100%;
      border: none;
      background: none;
      cursor: pointer;
      color: inherit;
      text-decoration: none;
      font-size: 14px;
      transition: 0.2s ease-in-out, color 0.2s ease-in-out;
    }

    .mypage-dropdown-menu a:hover, 
    .mypage-dropdown-menu button:hover {
      background-color: #f0f0f0;
      color: #333; 
    }

    /* üìå „É°„Éã„É•„ÉºË°®Á§∫ÊôÇ */
    .mypage-dropdown-container.open .mypage-dropdown-menu {
      display: block;
    }
  }
</style>

<script>
  let isDropdownOpen = false;
  const dropdown = document.querySelector(".mypage-dropdown-btn") as HTMLButtonElement;
  const btnLogout = document.querySelector(".mypage-top .btn-logout") as HTMLButtonElement;

  const toggleDropdown = () => {
      const menu = document.querySelector(".mypage-dropdown-menu") as HTMLElement;
      isDropdownOpen = !isDropdownOpen;
      if(menu){
          menu.style.display = isDropdownOpen ? "block" : "none";
      }
  }

  dropdown?.addEventListener('click', () => {
    toggleDropdown()
  })

  const logout = async () => {
    const res = await fetch(`http://localhost:3000/users/logout`, {
      method: "GET",
      credentials: "include"
    })
    const data = await res.json()
    return data
  }

  btnLogout.addEventListener("click", async () => {
      if (confirm(`Are you sure to log out?`)) {
          await logout();
          window.location.href = "/";
      }
      return
  });
</script>